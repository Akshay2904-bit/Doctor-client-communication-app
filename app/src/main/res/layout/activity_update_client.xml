<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="1012dp"
        android:background="@drawable/mainpage"
        tools:context=".Doctorside.UpdateClient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title Section -->
            <TextView
                android:layout_width="382dp"
                android:layout_height="51dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/car_ui_ime_wide_screen_content_area_background"
                android:paddingTop="10dp"
                android:text="Update Client's Details"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <!-- Image Section -->
            <ImageView
                android:id="@+id/Updated_client_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/uploading" />

            <!-- Client's Full Name -->
            <EditText
                android:id="@+id/Updated_client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_border"
                android:hint="Client's Full Name"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Client's Age and Gender Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/Updated_client_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/card_border"
                    android:hint="Age"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Updated_client_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/card_border"
                    android:hint="Gender"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Client's Disease Description -->
            <EditText
                android:id="@+id/Updated_client_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_border"
                android:hint="Disease Description"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Client's Phone Number -->
            <EditText
                android:id="@+id/Updated_client_phoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_border"
                android:hint="Phone Number"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/Save_updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/lavender"
                android:paddingHorizontal="32dp"
                android:paddingVertical="12dp"
                android:text="Save Updates"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <!-- Progress Bar in a hidden CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="80dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:contentDescription="Loading"
                    android:indeterminateTint="@color/lavender"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
