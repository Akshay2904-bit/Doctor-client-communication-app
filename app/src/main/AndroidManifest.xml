<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for external storage access -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" android:required="true"/>

    <!-- Scoped storage for Android 11 and above -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/medilink_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/medilink_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MediLink"
        tools:targetApi="31">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.medilink.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Activities declarations -->
        <activity
            android:name=".Doctorside.calendar_read_only_patients"
            android:exported="false" />
        <activity
            android:name=".GolbalActivities.Forgot_password_page"
            android:exported="false" />
        <activity
            android:name=".CalendarCodes.UpdateAppointment"
            android:exported="false" />
        <activity
            android:name=".CalendarCodes.Appointment_Details"
            android:exported="false" />
        <activity
            android:name=".Patientside.calendar_readOnly"
            android:exported="false" />
        <activity
            android:name=".Patientside.Doctor_Details_Display"
            android:exported="false" />
        <activity
            android:name=".Doctorside.ReportForm"
            android:exported="false" />
        <activity
            android:name=".CalendarCodes.Event_details"
            android:exported="false" />
        <activity
            android:name=".CalendarCodes.Event_details_readOnly"
            android:exported="false" />
        <activity
            android:name=".CalendarCodes.UpdateEvents"
            android:exported="false" />
        <activity
            android:name=".Doctorside.UpdateClient"
            android:exported="false" /> <!-- Designate MainActivity as the first launch page -->
        <activity
            android:name=".GolbalActivities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Doctorside.Client_data_display"
            android:exported="false" />
        <activity
            android:name=".Doctorside.AddingClient"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.yalantis.ucrop.UCropActivity" />
        <activity
            android:name=".Patientside.PatientSide"
            android:exported="false" />
        <activity
            android:name=".Doctorside.DoctorSide"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".GolbalActivities.HomePage"
            android:exported="false" />
        <activity
            android:name=".GolbalActivities.SignUpPage"
            android:exported="false" />
        <activity
            android:name=".GolbalActivities.LogInPage"
            android:exported="false" />
        <activity
            android:name=".GolbalActivities.StartupPage"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
